<%- include("../partials/header") %>
<div class="container" style="margin-top:5%"> 
    <h2><p>You can contribute in this project and make this platform widely use</p>
        <p>Please Let us know here what can you do in this project by add your comment here</p> </h2>
    
<div class="well">
                <div class="text-right">
                    <a class="ui inverted violet button" href="/feedbacks/new">Start Contribution</a>
                </div>
                <hr>
                <% feedbacks.forEach(function(feedback){ %>
                    <div class="row">
                        <div class="col-md-12">
                            <a class="ui label">
                     <i class="user outline icon"></i>
                                
                     <strong><%= feedback.author.username %></strong>
                         </a>        
                            <span class="pull-right"><%= moment(feedback.created).fromNow() %></span>
                            <p>
                                <%= feedback.text %> 
                            </p>
                            <hr>
                        <% if(currentUser && feedback.author.id && feedback.author.id.equals(currentUser._id) || currentUser && currentUser.isAdmin) { %>
                            <a class="btn btn-xs btn-warning" 
                               href="/feedbacks/<%=feedback._id %>/edit">Edit</a>
                            <form style="display: inline" action="/feedbacks/<%=feedback._id %>?_method=DELETE" method="POST">
                                <input type="submit" class="btn btn-xs btn-danger" value="Delete">
                            </form>
                            
                        <% } %>
                        </div>
                    </div>
                <% }) %>
            </div>
	
</div>

<%- include("../partials/footer") %>